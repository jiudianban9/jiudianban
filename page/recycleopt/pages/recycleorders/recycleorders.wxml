<!--page/recycleopt/pages/recycleorders/recycleorders.wxml-->
<view class="index-bd">
      <view class="order-list">
        <block wx:for-items="{{orderlist}}" wx:key="{{item.orderid}}">
          <view style="background-color: {{item.status?'jcadetblue':'yellowgreen'}};" class="order-list-item">
            <view  id="{{item.orderid}}" class="order-list-item-hd {{item.open ? 'order-list-item-hd-show' : ''}}" bindtap="kindToggle">
              <view style="display: flex; flex-direction: column;">
                <view class="order-list-text">{{item.communityname}}{{item.flat}}</view>
                <view class="order-list-text">{{item.date}}</view>
              </view>
              <!--<image wx:if="{{theme === 'dark'}}" class="kind-list-img" src="../../../../resources/kind/{{item.id}}_dark.png"></image>
              <image wx:else class="kind-list-img" src="../../../../resources/kind/{{item.id}}.png"></image>-->
            </view>

            <view style="background-color: {{item.status?'jcadetblue':'yellowgreen'}};" class="order-detail-item-bd {{item.open ? 'order-detail-item-bd-show' : ''}}">
              <view class="order-detail-item">
                    <view class="order-detail-text">订单编号：</view>
                    <view class="order-detail-text">{{item.orderid}}</view>
              </view>
              <view style="display: flex;">
                <view style="display: flex;flex-direction: column;">
                  
                  <view class="order-detail-item">
                    <view class="order-detail-text">金额：</view>
                    <input id="{{item.index}}" bindblur="onCostChanged" type="digit" disabled="{{item.status?true:false}}" class="data-input" value="{{item.cost}}" maxlength="8" placeholder="0" />
                  </view>
                  <view class="order-detail-item">
                    <view class="order-detail-text">重量：</view>
                    <input id="{{item.index}}" bindblur="onAmountChanged" type="digit" disabled="{{item.status?true:false}}" class="data-input" value="{{item.amount}}" maxlength="8" placeholder="0" />
                  </view>
                  <view class="order-detail-item">
                    <view class="order-detail-text">状态：{{item.status?'已完成':'未完成'}}</view>
                  </view>
                </view>
                <button id="{{item.index}}" amount="23" style="visibility:{{item.status?'hidden':''}}; width:50%;margin-right: 0%; align-items: center;" bindtap="onPayClicked" >付款</button>
              </view>
            </view>
          </view>
        </block>
      </view>
    </view>